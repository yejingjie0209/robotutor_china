<?xml version="1.0" encoding="utf-8"?>

<cmu.xprize.comp_writebox.CGlyphController_Simple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:background="@null">

    <!-- NOTE: aspect here is just a reminder that this object has it aspect set programmatically-->
    <FrameLayout
        android:id="@+id/drawn_container"
        app:layout_heightPercent="100%"
        app:layout_aspectRatio = "100%"
        android:background="@null">

        <cmu.xprize.comp_writebox.CGlyphInputContainer_Simple
            android:id="@+id/drawn_box"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:strokeweight = "5"
            android:background="@null" />

    </FrameLayout>

</cmu.xprize.comp_writebox.CGlyphController_Simple>