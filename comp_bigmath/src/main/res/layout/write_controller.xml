<?xml version="1.0" encoding="utf-8"?>
<cmu.xprize.comp_writebox.CGlyphController_Simple
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/glyph_controller"
        android:layout_width="@dimen/writebox_master_size"
        android:layout_height="@dimen/writebox_master_size"
        android:adjustViewBounds="true"
        android:background="@null"
        android:layout_margin="0dp"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/drawn_container"
            app:layout_heightPercent="100%"
            app:layout_aspectRatio = "100%"
            android:background="@null"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <cmu.xprize.comp_writebox.CGlyphInputContainer_Simple
                android:id="@+id/drawn_box"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:strokeweight = "5"
                android:background="@null" />

        </FrameLayout>

</cmu.xprize.comp_writebox.CGlyphController_Simple>